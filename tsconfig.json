{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2015", "es2016", "es2017", "dom"],
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }